

<%- include('partials/header.ejs') %>

<div class="w-full h-screen bg-cover bg-zinc-300 bg-[url(https://plus.unsplash.com/premium_photo-1681400141791-48b73f7eed0e?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] flex items-center justify-center">
  <div class="w-[45vh] bg-white px-20 py-[45px] rounded-[30px]">
    <h1 class="text-3xl my-8 tracking tighter capitalize text-center font-semibold text-zinc-700 leading-none">create new account</h1>
    <form action="/register" method="post" >
      
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" placeholder="Usename" name="username">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" placeholder="password" name="password">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" placeholder="contact"  name="contact">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" placeholder="email"  name="email">
      <input class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Login">
      <p class="text-xs font-semibold text-zinc-700 mt-10 w-2/2 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge that you've read our Privacy </p>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Already a member? Log in</a>
    </form>
  </div>
</div>
